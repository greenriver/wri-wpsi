#!/usr/bin/env bash
set -e
export COVERAGE=1

echo -e "\n== Jest tests =========================================================================="
yarn
yarn test

echo -e "\n== Security checks ====================================================================="
bundle exec brakeman -q --ensure-latest --no-pager \
  --except PermitAttributes,Render \
  --url-safe-methods source_url \
  --safe-methods long_description,content
bundle exec bundle-audit check --update

echo -e "\n== Rails test environment setup ========================================================"
bundle exec rails db:setup db:migrate RAILS_ENV=test

echo -e "\n== Rails tests ========================================================================="
bundle exec rake assets:precompile
bundle exec rails test:system test

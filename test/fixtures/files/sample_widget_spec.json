{
  "width": 300,
  "height": 300,
  "autosize": {
    "contains": "padding",
    "resize": true,
    "type": "pad"
  },
  "signals": [
    {
      "on": [
        {
          "update": "datum",
          "events": "@cell:mouseover"
        },
        {
          "update": "null",
          "events": "@cell:mouseout"
        }
      ],
      "value": null,
      "name": "hover"
    }
  ],
  "data": [
    {
      "format": {
        "property": "widget_datapoints",
        "type": "json"
      },
      "urlTemplate": "api/v1/widget_datapoints/${region.gid_2}/locdensity/",
      "name": "table"
    },
    {
      "transform": [
        {
          "expr": "hover && hover.datum.year === datum.year",
          "type": "filter"
        }
      ],
      "source": "table",
      "name": "dots"
    }
  ],
  "scales": [
    {
      "domain": {
        "field": "year",
        "data": "table"
      },
      "range": "width",
      "zero": false,
      "nice": false,
      "type": "linear",
      "name": "year"
    },
    {
      "domain": {
        "field": "locdensity",
        "data": "table"
      },
      "range": "height",
      "zero": true,
      "nice": true,
      "type": "linear",
      "name": "locdensity"
    },
    {
      "domain": {
        "field": "year",
        "data": "table"
      },
      "type": "ordinal",
      "reverse": true,
      "range": "ramp",
      "name": "color"
    }
  ],
  "axes": [
    {
      "labelOverlap": "parity",
      "format": "4f",
      "scale": "year",
      "zindex": 1,
      "orient": "bottom"
    },
    {
      "labelOverlap": "parity",
      "title": "Population Density (people/kmÂ²)",
      "scale": "locdensity",
      "format": "2s",
      "grid": true,
      "zindex": 0,
      "orient": "left"
    }
  ],
  "marks": [
    {
      "encode": {
        "enter": {
          "y": {
            "field": "locdensity",
            "scale": "locdensity"
          },
          "x": {
            "field": "year",
            "scale": "year"
          }
        }
      },
      "from": {
        "data": "table"
      },
      "interactive": false,
      "type": "line",
      "name": "lines"
    },
    {
      "encode": {
        "update": {
          "opacity": {
            "value": 1
          }
        },
        "enter": {
          "y": {
            "field": "locdensity",
            "scale": "locdensity"
          },
          "x": {
            "field": "year",
            "scale": "year"
          }
        }
      },
      "from": {
        "data": "dots"
      },
      "type": "symbol",
      "interactive": false,
      "name": "points"
    },
    {
      "encode": {
        "update": {
          "opacity": {
            "value": 0
          },
          "path": {
            "field": "path"
          },
          "fill": {
            "value": "red"
          }
        },
        "hover": {
          "tooltip": {
            "signal": "{'Density':format(hover.datum.locdensity,'.3s') + 'people per square mile', 'Year':hover.datum.year}"
          }
        }
      },
      "transform": [
        {
          "size": [
            {
              "signal": "width"
            },
            {
              "signal": "height"
            }
          ],
          "y": "datum.y",
          "x": "datum.x",
          "type": "voronoi"
        }
      ],
      "from": {
        "data": "lines"
      },
      "type": "path",
      "name": "cell"
    }
  ]
}
